{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Landlock security policy configuration schema",
  "type": "object",
  "definitions": {
    "uint64": {
      "type": "integer",
      "minimum": 0,
      "maximum": 18446744073709551615
    },
    "accessFs": {
      "type": "string",
      "enum": [
        "execute",
        "write_file",
        "read_file",
        "read_dir",
        "remove_dir",
        "remove_file",
        "make_char",
        "make_dir",
        "make_reg",
        "make_sock",
        "make_fifo",
        "make_block",
        "make_sym",
        "v1.all",
        "v1.read_execute",
        "v1.read_write",
        "refer",
        "v2.all",
        "v2.read_execute",
        "v2.read_write",
        "truncate",
        "v3.all",
        "v3.read_execute",
        "v3.read_write",
        "v4.all",
        "v4.read_execute",
        "v4.read_write",
        "ioctl_dev",
        "v5.all",
        "v5.read_execute",
        "v5.read_write"
      ]
    },
    "accessNet": {
      "type": "string",
      "enum": [
        "bind_tcp",
        "connect_tcp",
        "v4.all",
        "v5.all"
      ]
    }
  },
  "properties": {
    "ruleset": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "handledAccessFs": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/accessFs"
                }
              }
            },
            "required": [
              "handledAccessFs"
            ],
            "additionalProperties": false
          },
          {
            "properties": {
              "handledAccessNet": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/accessNet"
                }
              }
            },
            "required": [
              "handledAccessNet"
            ],
            "additionalProperties": false
          }
        ]
      }
    },
    "pathBeneath": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "allowedAccess": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/accessFs"
            }
          },
          "parent": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "allowedAccess",
          "parent"
        ],
        "additionalProperties": false
      }
    },
    "netPort": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "allowedAccess": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/accessNet"
            }
          },
          "port": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/uint64"
            }
          }
        },
        "required": [
          "allowedAccess",
          "port"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "ruleset"
  ],
  "additionalProperties": false
}
